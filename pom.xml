<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>ansys-grantami</groupId>
  <artifactId>bomanalytics-openapi</artifactId>
  <version>4.0.0rc1</version>
  <packaging>pom</packaging>
  <name>PyGranta BoM Analytics OpenAPI</name>

  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <maven-plugin-version>1.0.0</maven-plugin-version>
    <language>com.ansys.granta.codegen.AnsysPythonClientCodegen</language>
    <swagger-template-version>4.2.0-SNAPSHOT</swagger-template-version>
    <package-import-path>ansys.grantami.bomanalytics_openapi</package-import-path>
    <project-name>ansys-grantami-bomanalytics-openapi</project-name>
    <package-description>Autogenerated client library for the Granta MI BoM Analytics Services.</package-description>
    <homepage-url>https://github.com/ansys/grantami-bomanalytics-openapi</homepage-url>
    <documentation-url>https://grantami.docs.pyansys.com</documentation-url>
    <pythonic-package-name>ansys-grantami-bomanalytics</pythonic-package-name>
    <pythonic-package-url>https://github.com/pyansys/grantami-bomanalytics</pythonic-package-url>
    <is-namespace-package>True</is-namespace-package>
    <v1-yaml-filename>Granta.BomAnalyticsServices.V1.yaml</v1-yaml-filename>
    <v2-yaml-filename>Granta.BomAnalyticsServices.V2.yaml</v2-yaml-filename>
  </properties>

  <build>
    <plugins>
      <plugin>
        <groupId>io.swagger.codegen.v3</groupId>
        <artifactId>swagger-codegen-maven-plugin</artifactId>
        <version>3.0.68</version>
        <executions>
          <execution>
            <id>${v1-yaml-filename}</id>
            <goals>
              <goal>generate</goal>
            </goals>
            <configuration>
              <inputSpec>${project.basedir}/yaml/${v1-yaml-filename}</inputSpec>
              <language>${language}</language>
              <output>${project-name}</output>
              <generateApiTests>false</generateApiTests>
              <generateModelTests>false</generateModelTests>
              <configOptions>
                <packageName>${package-import-path}</packageName>
                <projectName>${project-name}</projectName>
                <packageVersion>${project.version}</packageVersion>
                <projectDescription>${package-description}</projectDescription>
                <homepageUrl>${homepage-url}</homepageUrl>
                <documentationUrl>${documentation-url}</documentationUrl>
                <pythonicPackageName>${pythonic-package-name}</pythonicPackageName>
                <pythonicPackageUrl>${pythonic-package-url}</pythonicPackageUrl>
                <buildNumber>${build-id}</buildNumber>
                <isReleaseBuild>${is-release}</isReleaseBuild>
                <isNamespacePackage>${is-namespace-package}</isNamespacePackage>
                <bindingNamespace>v1</bindingNamespace>
              </configOptions>
            </configuration>
          </execution>
          <execution>
            <id>${v2-yaml-filename}</id>
            <goals>
              <goal>generate</goal>
            </goals>
            <configuration>
              <inputSpec>${project.basedir}/yaml/${v2-yaml-filename}</inputSpec>
              <language>${language}</language>
              <output>${project-name}</output>
              <generateApiTests>false</generateApiTests>
              <generateModelTests>false</generateModelTests>
              <configOptions>
                <packageName>${package-import-path}</packageName>
                <projectName>${project-name}</projectName>
                <packageVersion>${project.version}</packageVersion>
                <projectDescription>${package-description}</projectDescription>
                <homepageUrl>${homepage-url}</homepageUrl>
                <documentationUrl>${documentation-url}</documentationUrl>
                <pythonicPackageName>${pythonic-package-name}</pythonicPackageName>
                <pythonicPackageUrl>${pythonic-package-url}</pythonicPackageUrl>
                <buildNumber>${build-id}</buildNumber>
                <isReleaseBuild>${is-release}</isReleaseBuild>
                <isNamespacePackage>${is-namespace-package}</isNamespacePackage>
                <bindingNamespace>v2</bindingNamespace>
              </configOptions>
            </configuration>
          </execution>
        </executions>
        <dependencies>
          <dependency>
            <groupId>com.ansys</groupId>
            <artifactId>pyansys-swagger-codegen</artifactId>
            <version>${swagger-template-version}</version>
            <scope>compile</scope>
          </dependency>
        </dependencies>
      </plugin>
    </plugins>
  </build>
</project>
