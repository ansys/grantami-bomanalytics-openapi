<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>ansys-grantami</groupId>
  <artifactId>bomanalytics-openapi</artifactId>
  <version>3.0.0</version>
  <packaging>pom</packaging>
  <name>PyGranta BoM Analytics OpenAPI</name>

  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <maven-plugin-version>1.0.0</maven-plugin-version>
    <yaml-filename>Granta.BomAnalyticsServices.V1.yaml</yaml-filename>
    <swagger-template-version>4.1.1-SNAPSHOT</swagger-template-version>
    <package-name>ansys-grantami-bomanalytics-openapi</package-name>
    <package-import-path>ansys.grantami.bomanalytics_openapi</package-import-path>
    <package-description>Autogenerated client library for the Granta MI BoM Analytics Services.</package-description>
    <base-package-version>1.1.0</base-package-version>
  </properties>

  <build>
    <plugins>
      <plugin>
        <groupId>io.swagger.codegen.v3</groupId>
        <artifactId>swagger-codegen-maven-plugin</artifactId>
        <version>3.0.66</version>
        <executions>
          <execution>
            <goals>
              <goal>generate</goal>
            </goals>
            <configuration>
              <inputSpec>${project.basedir}/yaml/${yaml-filename}</inputSpec>
              <language>com.ansys.granta.codegen.AnsysPythonClientCodegen</language>
              <output>${package-name}</output>
              <generateApiTests>false</generateApiTests>
              <generateModelTests>false</generateModelTests>
              <configOptions>
                <packageName>${package-import-path}</packageName>
                <projectName>${package-name}</projectName>
                <projectDescription>${package-description}</projectDescription>
                <pythonicPackageName>ansys-grantami-bomanalytics</pythonicPackageName>
                <pythonicPackageUrl>https://github.com/pyansys/grantami-bomanalytics</pythonicPackageUrl>
                <homepageUrl>https://github.com/ansys/grantami-bomanalytics-openapi</homepageUrl>
                <documentationUrl>https://grantami.docs.pyansys.com</documentationUrl>
                <packageVersion>${project.version}</packageVersion>
                <buildNumber>${build-id}</buildNumber>
                <isReleaseBuild>${is-release}</isReleaseBuild>
                <isNamespacePackage>True</isNamespacePackage>
              </configOptions>
            </configuration>
          </execution>
        </executions>
        <dependencies>
          <dependency>
            <groupId>com.ansys</groupId>
            <artifactId>pyansys-swagger-codegen</artifactId>
            <version>${swagger-template-version}</version>
            <scope>compile</scope>
          </dependency>
        </dependencies>
      </plugin>
    </plugins>
  </build>
</project>
